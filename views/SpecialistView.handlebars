<table class="table caption-top">
  <caption>Specialists</caption>
  <thead>
    <tr>
      <th scope="col">Specialist_id</th>
      <th scope="col">SpecialistName</th>
      <th scope="col">Speciality</th>
      <th scope="col">Remove Specialist</th>
    </tr>
  </thead>
  <tbody>
    {{#each specialists as |specialist|}}
    <tr>
      <th scope="row">{{specialist.id}}</th>
      <td><a href="/Medisearch/Specialists/View/{{specialist.id}}">{{specialist.SpecialistName}}</a></td>
      <td>{{specialist.Speciality}}</td>
      <td><a id="delete-specialist-{{specialist.id}}" class="delete-specialist">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>

<script src="/javascript/delete-specialist.js"></script>